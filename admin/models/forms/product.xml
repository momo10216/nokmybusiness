<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_nokmybusiness/models/fields" >
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
			readonly="true" />

		<field name="published" type="list" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_PUBLISHED_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_PUBLISHED_DESC"
			size="1"
			default="1">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="name" type="text" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_NAME_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_NAME_DESC"
			size="40"
			required="true" />

		<field name="catid" type="category" extension="com_nokmybusiness" class="inputbox" default=""
			label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_CATID_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_CATID_DESC"
			required="false"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>

		<field name="description" type="editor" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_DESCRIPTION_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_DESCRIPTION_DESC"
			width="300" filter="safehtml"
			required="false" />

		<field name="status" type="list" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_STATUS_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_STATUS_DESC"
			class="inputbox"
			default=""
			required="false">
			<option value="ACTIVE">COM_NOKMYBUSINESS_ACTIVE</option>
			<option value="INACTIVE">COM_NOKMYBUSINESS_INACTIVE</option>
		</field>

		<field name="stock" type="number" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_STOCK_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_STOCK_DESC"
			min="0" max="9999999999" step="1"
			required="true" />

		<field name="price" type="number" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_PRICE_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_PRICE_DESC"
			min="0" max="9999999999" step="any"
			required="true" />

		<field name="vat" type="number" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_VAT_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_VAT_DESC"
			min="0" max="100" step="any"
			required="true" />

		<field name="picture" type="media" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_PICTURE_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_PICTURE_DESC"
			preview="tooltip"
			required="true" />

		<field name="createdby" type="text" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_CREATEDBY_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_CREATEDBY_DESC"
			required="false"
			readonly="true" />

		<field name="createddate" type="calendar" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_CREATEDDATE_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_CREATEDDATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc"
			required="false"
			readonly="true" />

		<field name="modifiedby" type="text" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_MODIFIEDBY_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_MODIFIEDBY_DESC"
			required="false"
			readonly="true" />

		<field name="modifieddate" type="calendar" label="COM_NOKMYBUSINESS_PRODUCTS_FIELD_MODIFIEDDATE_LABEL"
			description="COM_NOKMYBUSINESS_PRODUCTS_FIELD_MODIFIEDDATE_DESC"
			size="22"
			format="%Y-%m-%d %H:%M:%S" filter="user_utc"
			required="false"
			readonly="true" />
	</fieldset>
</form>

